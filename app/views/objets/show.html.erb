<h1>Bienvenue sur notre page d'affiche d'un objet</h1>

<h1>DÃ©tails de l'objet</h1>

<p>
  <strong>Nom :</strong>
  <%= @objet.nom %>
</p>

<p>
  <strong>Adresse :</strong>
  <%= @objet.adresse %>
</p>

<h3>Secteurs</h3>
<ul>
  <% @objet.secteurs.each do |secteur| %>
    <li>
      <%= secteur.nom %>
      <% if secteur.image.attached? %>
        <%= image_tag secteur.image, alt: "Image du secteur", class: "sector-image" %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if @objet.image.attached? %>
  <p>
    <strong>Image :</strong>
    <%= image_tag @objet.image, style: "width: 100%; max-width: 600px; height: auto;", alt: "Image de l'objet" %>
  </p>
<% end %>

<%= link_to 'Modifier cet objet', edit_objet_path(@objet), class: 'btn btn-primary' %>
<%= link_to 'Retour', objets_path, class: 'btn btn-secondary' %>
