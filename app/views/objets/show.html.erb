<div class="object-show" data-controller="sector-select" data-sector-select-objet-id="<%= @objet.id %>">
  <h1>Bienvenue sur notre page d'affichage d'un objet</h1>

  <h1>Détails de l'objet</h1>

  <p>
    <strong>Nom :</strong>
    <%= @objet.nom %>
  </p>

  <p>
    <strong>Adresse :</strong>
    <%= @objet.adresse %>
  </p>

  <h3>Secteurs</h3>
  <select data-sector-select-target="sectorSelect" data-action="change->sector-select#loadImage">
    <option value="">Choisir un secteur</option>
    <% @objet.secteurs.each do |secteur| %>
      <option value="<%= secteur.id %>"><%= secteur.nom %></option>
    <% end %>
  </select>

  <div id="sector-image-container">
    <%= image_tag '', alt: "Image du secteur sélectionné", data: { sector_select_target: 'sectorImage' }, style: "display: none;" %>
  </div>

  <% if @objet.image.attached? %>
    <p>
      <strong>Image :</strong>
      <%= image_tag @objet.image, alt: "Image de l'objet", class: "object-image" %>
    </p>
  <% end %>

  <%= link_to 'Modifier cet objet', edit_objet_url(@objet), class: 'btn btn-primary' %>
</div>
